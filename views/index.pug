extends layout

block scripts
    script(src="javascripts/index.js")

block content
    div(id='content')
        h1=title
        h2=user_name
        h2=user_is_admin
        table(id='monats-dienstplan')
            tr
                th(id='week-day-column')
                th(id='day-column')
                th(class='name-column') Name
                th(class='name-column') Reservetermin
                th(class='name-column') Zweiter Reservetermin
            for row in rows
                if row.week_change
                    tr
                        td(colspan=5 class='new-week')
                else
                    tr
                        td=row.weekday
                        td!=row.day_of_month + '.'
                        td(
                            id='primary_' + row.day_of_month
                            title=row.primary_id
                        )
                        td(
                            id='reserve_' + row.day_of_month
                            title=row.reserve_id
                        )
                        td(
                            id='secondReserve_' + row.day_of_month
                            title=row.secondary_reserve_id
                        )
    div(id='selectionDialog' class='dialog')
        div(id='selectionDialogContent')
            div(id='selectionButtons')
                button(id='cancelUserSelectionButton' class='selectUserButton')="Zurück"
    div(id='confirmationDialog' class='dialog')
        button(id='cancelBooking' class='selectUserButton')="Zurück"
        button(id='confirm' class='selectUserButton')="Ja"
