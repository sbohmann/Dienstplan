extends layout

block scripts
  script(src="javascripts/index.js")

block content
  h1=title
  table(id='monats-dienstplan')
    tr
      th(id=week-day-column)
      th(id=day-column)
      th(id=name-column) Name
      th(id=reserve-column) Reservetermin
      th(id=second-reserve-column) Zweiter Reservetermin
    for row in rows
      if row.week_change
        tr
          td(colspan=5 class='new-week')
      else
        tr
          if row.sunday
            td(class='sunday')=row.weekday
            td(class='sunday')=row.day + '. ' + month
          else
            td=row.weekday
            td=row.day + '. ' + month
          td(id='name_' + row.day)=row.name
          td(id='reserve_' + row.day)=row.reserve
          td(id='second-reserve_' + row.day)=row.second_reserve
