extends layout

block scripts
    script(src="/javascripts/common/listview/listView.js")
    script(src="/javascripts/dom.js")
    script(src="/javascripts/userAdministration.js")

block content
    div(id='content')
        div#title
            h1 Benutzerverwaltung
            a(href="/")
                img(src="/images/calendar-icon.png" width=32 height=32)
        button(id='editUserButton' class='dialog-button')="Bearbeiten"
        button(id='addUserButton' class='dialog-button')="Neuer Benutzer"
        button(id='resetPasswordButton' class='dialog-button')="Passwort-Reset"
        div#userListContainer
        p(id="errorMessage")
    div(id='editUserDialog' class='dialog')
        div(class='dialog-content')
            p(id='editUserDialogTitle' class='dialog-title')
            div(class='dialog-buttons')
                p
                    label Name
                        br
                        input(type='text' id='editUserNameInput' class='dialog-textfield')
                p
                    label
                        input(type='checkbox' id='editUserAdministratorInput')
                        | Administrator
                button(id='saveUserButton' class='dialog-button')="Speichern"
                button(id='cancelEditUserButton' class='dialog-button')="Zur√ºck"
